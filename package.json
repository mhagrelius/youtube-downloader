{
  "name": "youtube-downloader",
  "version": "1.1.0",
  "type": "module",
  "description": "A modern YouTube video downloader with a beautiful UI",
  "main": "dist-electron/main.js",
  "bin": {
    "yt-transcribe": "./cli/dist/cli/index.js"
  },
  "scripts": {
    "dev": "vite",
    "build:assets": "tsc && vite build --mode electron && vite build",
    "build": "npm run build:assets && electron-builder",
    "build:test": "vite build --mode electron",
    "build:mac": "npm run build:assets && electron-builder --mac",
    "build:win": "npm run build:assets && electron-builder --win",
    "build:linux": "npm run build:assets && electron-builder --linux",
    "build:cli": "tsc -p tsconfig.cli.json && node scripts/prepare-cli.mjs",
    "cli": "tsx cli/index.ts",
    "preview": "vite preview",
    "electron:dev": "vite --mode electron",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"electron/**/*.ts\" \"shared/**/*.ts\" \"cli/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\" \"electron/**/*.ts\" \"shared/**/*.ts\" \"cli/**/*.ts\" \"tests/**/*.ts\"",
    "type-check": "tsc --noEmit && tsc --noEmit -p tsconfig.node.json",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.node.config.ts --passWithNoTests",
    "test:e2e": "npm run build:test && playwright test",
    "test:e2e:ui": "npm run build:test && playwright test --ui",
    "test:e2e:full": "npm run build:test && playwright test --grep-invert @smoke",
    "test": "npm run test:unit && npm run test:integration",
    "test:all": "npm run test && npm run test:e2e",
    "check": "npm run type-check && npm run lint && npm run format:check && npm run test",
    "icons": "node scripts/generate-icons.mjs"
  },
  "keywords": [
    "youtube",
    "downloader",
    "electron",
    "react"
  ],
  "author": "mhagrelius",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mhagrelius/youtube-downloader"
  },
  "homepage": "https://github.com/mhagrelius/youtube-downloader#readme",
  "build": {
    "appId": "com.youtubedownloader.app",
    "productName": "YouTube Downloader",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.video",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "icon": "build/icon.png",
      "category": "Video",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "electron-store": "^8.1.0",
    "uuid": "^9.0.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.40.1",
    "@tailwindcss/vite": "^4.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^4.0.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^27.4.0",
    "lucide-react": "^0.303.0",
    "png-to-ico": "^3.0.1",
    "prettier": "^3.7.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.52.0",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^4.0.16"
  }
}
