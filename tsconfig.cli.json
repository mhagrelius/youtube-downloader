{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "outDir": "dist-cli",
    "rootDir": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "verbatimModuleSyntax": false
  },
  "include": [
    "cli/**/*.ts",
    "shared/**/*.ts",
    "electron/services/binary-manager.service.ts",
    "electron/services/ytdlp.service.ts",
    "electron/services/transcription.service.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-electron",
    "dist-cli",
    "electron/main.ts",
    "electron/preload.ts",
    "electron/ipc/**",
    "electron/services/electron-paths.ts"
  ]
}
