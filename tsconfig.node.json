{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "downlevelIteration": true,
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "noEmit": true
  },
  "include": ["vite.config.ts", "electron/**/*.ts", "shared/**/*.ts", "e2e/**/*.ts"]
}
